<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xframe_loading_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/XFrame_white"
    android:orientation="vertical"
    android:padding="@dimen/XFrame_spacing">


    <ProgressBar
        android:id="@+id/xframe_loading_progressbar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progressbar" />


    <TextView
        android:id="@+id/xframe_loading_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xframe_loading_progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/xloading_dialog_message"
        android:textColor="@color/XFrame_loading_dialog_message"
        android:textSize="@dimen/XFrame_text_size_small" />

</LinearLayout>

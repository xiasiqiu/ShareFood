<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:padding="10dp">

                <TextView
                    style="@style/NormalTextView"
                    android:layout_centerVertical="true"
                    android:text="餐盒费"
                    android:textColor="@color/order_detail" />

                <TextView
                    android:id="@+id/tv_mealFee"
                    style="@style/RegularTextView"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/order_detail" />


            </RelativeLayout>

            <View style="@style/LightLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:padding="10dp">

                <TextView
                    style="@style/NormalTextView"
                    android:layout_centerVertical="true"
                    android:text="配送费"
                    android:textColor="@color/order_detail" />

                <TextView
                    android:id="@+id/tv_shippingFee"
                    style="@style/RegularTextView"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/order_detail" />

            </RelativeLayout>

            <View style="@style/LightLine" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="vertical" />


        <View
            android:id="@+id/vLine"
            style="@style/LightLine"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_contact_seller"
                style="@style/NormalTextView"
                android:drawableLeft="@drawable/contact"
                android:drawablePadding="5dp"
                android:padding="3dp"
                android:text="联系商家"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/tv_real_pay"
                style="@style/NormalTextView"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:text=""
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/price_1a" />

        </RelativeLayout>

        <View style="@style/LightLine" />

        <LinearLayout
            android:id="@+id/ll_mine_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white_f2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="我的评价"
                style="@style/NormalTextView"
                android:textColor="@color/order_detail"
                android:background="@color/bg_white"
                android:drawableRight="@drawable/ic_right_row"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_takeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white_f2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_pe"
                    style="@style/NormalTextView"
                    android:padding="3dp"
                    android:text="配送信息"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_arrive_time"
                    style="@style/NormalTextView"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_pe"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/order_detail" />

                <TextView
                    style="@style/NormalTextView"
                    android:layout_below="@+id/tv_pe"
                    android:layout_marginTop="8dp"
                    android:padding="3dp"
                    android:text="送达时间"
                    android:textColor="@color/order_detail" />
            </RelativeLayout>

            <View style="@style/LightLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_left"
                    style="@style/NormalTextView"
                    android:padding="3dp"
                    android:text="收货地址"
                    android:textColor="@color/order_detail" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_left"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/order_detail"
                    android:textSize="@dimen/tv_Normal" />

                <TextView
                    android:id="@+id/tv_contact_phone"
                    style="@style/NormalTextView"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_address"
                    android:layout_marginLeft="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="@color/order_detail" />
            </RelativeLayout>

            <View style="@style/LightLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/NormalTextView"
                    android:padding="3dp"
                    android:text="配送方式"
                    android:textColor="@color/order_detail" />

                <TextView
                    android:id="@+id/tv_delivery_way"
                    style="@style/NormalTextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="@color/order_detail" />
            </RelativeLayout>

            <View
                android:id="@+id/v_name"
                style="@style/LightLine"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    style="@style/NormalTextView"
                    android:padding="3dp"
                    android:text="配送员"
                    android:textColor="@color/order_detail" />

                <TextView
                    android:id="@+id/tv_staff_username"
                    style="@style/NormalTextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="@color/order_detail" />
            </RelativeLayout>

            <View
                android:id="@+id/v_phone"
                style="@style/LightLine"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    style="@style/NormalTextView"
                    android:padding="3dp"
                    android:text="配送员电话"
                    android:textColor="@color/order_detail" />

                <TextView
                    android:id="@+id/tv_staff_tel"
                    style="@style/NormalTextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="@color/green" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white_f2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_order_info"
                    style="@style/NormalTextView"
                    android:padding="3dp"
                    android:text="订餐信息"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_order_in_time"
                    style="@style/NormalTextView"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_order_info"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"

                    android:text=""
                    android:textColor="@color/order_detail" />

                <TextView
                    style="@style/NormalTextView"
                    android:layout_below="@+id/tv_order_info"
                    android:layout_marginTop="8dp"
                    android:padding="3dp"
                    android:text="订餐时间"
                    android:textColor="@color/order_detail" />
            </RelativeLayout>

            <View style="@style/LightLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/NormalTextView"
                    android:padding="3dp"
                    android:text="联系人"
                    android:textColor="@color/order_detail" />

                <TextView
                    android:id="@+id/tv_contact"
                    style="@style/NormalTextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="@color/order_detail" />
            </RelativeLayout>

            <View style="@style/LightLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/NormalTextView"
                    android:padding="3dp"
                    android:text="就餐人数"
                    android:textColor="@color/order_detail" />

                <TextView
                    android:id="@+id/tv_num"
                    style="@style/NormalTextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="@color/order_detail" />
            </RelativeLayout>

            <View style="@style/LightLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/NormalTextView"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:text="是否需要包间"
                    android:textColor="@color/order_detail" />

                <com.xinyuan.xyorder.widget.SwitchButton
                    android:id="@+id/sb_compartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white_f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_order_info1"
                style="@style/NormalTextView"
                android:padding="3dp"
                android:text="订单信息"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_order_num"
                style="@style/NormalTextView"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_order_info1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/order_detail" />

            <TextView
                style="@style/NormalTextView"
                android:layout_below="@+id/tv_order_info1"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:text="订单号"
                android:textColor="@color/order_detail" />
        </RelativeLayout>

        <View style="@style/LightLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/NormalTextView"
                android:padding="3dp"
                android:text="支付方式"
                android:textColor="@color/order_detail" />

            <TextView
                android:id="@+id/tv_pay_way"
                style="@style/NormalTextView"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/order_detail" />
        </RelativeLayout>

        <View style="@style/LightLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/NormalTextView"
                android:padding="3dp"
                android:text="下单时间"
                android:textColor="@color/order_detail" />

            <TextView
                android:id="@+id/tv_order_delivery_time"
                style="@style/NormalTextView"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/order_detail" />
        </RelativeLayout>
        <View style="@style/LightLine" />
        <RelativeLayout
            android:id="@+id/rl_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_left11"
                style="@style/NormalTextView"
                android:padding="3dp"
                android:text="发票信息"
                android:textColor="@color/order_detail" />

            <TextView
                android:id="@+id/tv_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_left11"
                android:gravity="right"
                android:text=""
                android:textColor="@color/order_detail"
                android:textSize="@dimen/tv_Normal" />

            <TextView
                android:id="@+id/tv_invoice_num"
                style="@style/NormalTextView"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_invoice"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:text=""
                android:textColor="@color/order_detail" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

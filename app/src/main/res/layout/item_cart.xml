<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.xinyuan.xyorder.widget.AddWidget
        android:id="@+id/car_addwidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/car_price"
        style="@style/BigTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/car_old_price"
        style="@style/LightTextView"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/car_price"
        android:textColor="@color/tv_hint"
        android:visibility="visible" />

    <TextView
        android:id="@+id/car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/car_old_price"
        android:ellipsize="end"
        android:includeFontPadding="true"
        android:maxLines="1"
        android:textColor="@color/tv_66"
        android:textSize="@dimen/tv_Regular" />

    <TextView
        android:id="@+id/car_name_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:includeFontPadding="true"
        android:maxLines="1"
        android:textColor="@color/tv_hint"
        android:textSize="@dimen/tv_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/car_name_hint"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine" />
</RelativeLayout>


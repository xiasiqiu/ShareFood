<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_shop_name"
                style="@style/BlodTextView"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/tv_Blod" />

            <ImageView
                android:id="@+id/iv_store_eva_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shop_name"
                android:layout_marginTop="15dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_sell_num"
                style="@style/LightTextView"
                android:layout_below="@+id/tv_shop_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/iv_store_eva_level"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/tv_91" />

            <TextView
                android:id="@+id/tv_distance"
                style="@style/LightTextView"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_shop_name"
                android:layout_marginTop="12dp"
                android:textColor="@color/tv_91" />

            <TextView
                android:id="@+id/tv_price_send"
                style="@style/LightTextView"
                android:layout_below="@id/iv_store_eva_level"
                android:layout_marginRight="1dp"
                android:layout_marginTop="17dp"
                android:textColor="@color/tv_91" />

            <TextView
                android:id="@+id/tv_avg_price"
                style="@style/LightTextView"
                android:layout_below="@id/iv_store_eva_level"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/tv_price_send"
                android:textColor="@color/tv_91" />

            <TextView
                android:id="@+id/tv_store_status"
                style="@style/LightTextView"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_distance"
                android:layout_marginTop="10dp"
                android:background="@drawable/store_open_bg"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="休息中"
                android:textColor="@color/bg_white"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


    </LinearLayout>

</RelativeLayout>
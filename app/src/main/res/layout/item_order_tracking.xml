<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_top_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_d9"
            android:visibility="gone"
            android:layout_above="@id/iv_dot"/>
        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/shape_green_circle" />

        <ImageView
            android:id="@+id/iv_bottom_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_dot"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_d9"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/green"
            android:textSize="@dimen/tv_Normal" />

        <TextView
            android:id="@+id/tv_describle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tracking"
            android:layout_marginLeft="10dp"
            android:text="感谢您对共享的信任，期待下次光临"
            android:textColor="@color/tv_hint"
            android:textSize="@dimen/tv_small"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tracking_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="right"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="@color/tv_hint"
        android:textSize="@dimen/tv_light" />
</LinearLayout>
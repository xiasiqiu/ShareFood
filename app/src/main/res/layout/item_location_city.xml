<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/tv_locate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="当前定位"
        android:textColor="@color/tv_hint"
        android:textSize="@dimen/tv_Regular" />
    <View
        android:id="@+id/vLine1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_locate"
        android:background="@color/white_f2"/>
    <RelativeLayout
        android:id="@+id/rl_current_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:layout_below="@+id/vLine1">
        <TextView
            android:id="@+id/tv_current_locate_city"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_33"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text=""
            android:textSize="@dimen/tv_Regular" />
        <TextView
            android:id="@+id/tv_relocation"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:textColor="@color/red"
            android:paddingRight="15dp"
            android:text="重新定位"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/tv_Regular" />
        <ImageView
            android:id="@+id/iv_relocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/retry_location"
            android:layout_toLeftOf="@+id/tv_relocation"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"/>
        <ProgressBar
            android:id="@+id/pb_progress"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_relocation"
            android:layout_marginRight="5dp"
            android:visibility="gone"/>
    </RelativeLayout>
    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rl_current_city"
        android:background="@color/white_f2"/>
    <TextView
        android:id="@+id/tv_delivery_address"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="收货地址"
        android:layout_below="@+id/vLine"
        android:textColor="@color/tv_hint"
        android:textSize="@dimen/tv_Regular"
        android:visibility="gone"/>
    <View
        android:id="@+id/v_delivery_address"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_delivery_address"
        android:background="@color/white_f2"
        android:visibility="gone"/>
</RelativeLayout>

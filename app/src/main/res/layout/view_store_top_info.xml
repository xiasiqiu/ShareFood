    <RelativeLayout
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/tv_top_store_name"
            style="@style/BlodTextView"
            android:layout_marginRight="60dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/bg_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_top_store_name_top"
            style="@style/BlodTextView"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/bg_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_store_announce"
            style="@style/NormalTextView"
            android:layout_below="@+id/tv_top_store_name"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/bg_white" />

        <TextView
            android:id="@+id/tv_store_address"
            style="@style/NormalTextView"
            android:layout_below="@+id/tv_store_announce"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_mine_address_w"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/bg_white" />

        <TextView
            android:id="@+id/tv_good_fv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_store_faved_de"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:text="未收藏"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/tv_small" />

    </RelativeLayout>


</FrameLayout>
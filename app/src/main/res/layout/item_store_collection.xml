<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/chekbox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/chekbox"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_shop_name"
            style="@style/BlodTextView"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_shop"
            android:text="" />

        <ImageView
            android:id="@+id/iv_store_eva_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/iv_shop"
            android:scaleType="centerInside" />


        <TextView
            android:id="@+id/tv_sell_num"
            style="@style/NormalTextView"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_store_eva_level"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/gray_4d" />


        <TextView
            android:id="@+id/tv_avg_price"
            style="@style/NormalTextView"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_shop"
            android:text=""
            android:textColor="@color/gray_4d" />
    </RelativeLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1px"-->
    <!--android:layout_below="@+id/ll_top"-->
    <!--android:layout_marginTop="15dp"-->
    <!--android:background="@color/gray_d9" />-->
</RelativeLayout>

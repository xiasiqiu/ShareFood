<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_welcome_top" />

    <ImageView
        android:id="@+id/iv_welcome_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="105dp"
        android:src="@drawable/ic_start_logo" />

    <ImageView
        android:id="@+id/iv_welcome_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:background="@drawable/ic_start_bottom" />

    <TextView
        style="@style/NormalTextView"
        android:layout_below="@+id/iv_welcome_logo"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:ems="1"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:text="开启共享点餐美食之旅\n.\n.\n."
        android:textColor="@color/gray_4d" />


    <TextView
        android:id="@+id/tv_version"
        style="@style/LightTextView"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="80dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/ic_welcome_bottom" />

</FrameLayout>

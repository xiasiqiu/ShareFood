<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white_fa"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_d9" />

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_menu_home"
            style="@style/style_main_tab"
            android:drawableTop="@drawable/act_home_my"
            android:text="@string/menu_home" />

        <TextView
            android:id="@+id/tv_menu_near"
            style="@style/style_main_tab"
            android:drawableTop="@drawable/act_home_my"
            android:text="@string/menu_near" />

        <TextView
            android:id="@+id/tv_null"
            style="@style/style_main_tab" />

        <TextView
            android:id="@+id/tv_menu_order"
            style="@style/style_main_tab"
            android:drawableTop="@drawable/act_home_my"
            android:text="@string/menu_order" />

        <TextView
            android:id="@+id/tv_menu_mine"
            style="@style/style_main_tab"
            android:drawableTop="@drawable/act_home_my"
            android:text="@string/menu_mine" />
    </LinearLayout>
</LinearLayout>

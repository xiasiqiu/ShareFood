<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/bg_white"
    android:elevation="3dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        style="@style/RegularTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:text="@string/money_rmb"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_red_price"
        style="@style/BlodTextView"
        android:layout_marginLeft="15dp"
        android:textColor="@color/red"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_red_name"
        style="@style/BlodTextView"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_4d"
        android:textSize="@dimen/tv_Blod" />

    <TextView
        android:id="@+id/tv_red_need"
        style="@style/BlodTextView"
        android:layout_below="@id/tv_red_price"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/tv_hint"
        android:textSize="@dimen/tv_light" />

    <TextView
        android:id="@+id/tv_red_time"
        style="@style/BlodTextView"
        android:layout_below="@id/tv_red_price"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/tv_hint"
        android:textSize="@dimen/tv_light" />


    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:padding="20dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">
    <include layout="@layout/view_header_tv_tv"/>
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_white"
        android:gravity="left|center_vertical"
        android:hint="用户名"
        android:textSize="@dimen/tv_Regular"
        android:textColorHint="@color/gray_a5"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_user_prompt"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"
        android:textColor="@color/gray_a5"/>

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/rl_top"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/rect_gray"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/tv_Blod" />
</LinearLayout>